root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.scss]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4

[*.txt]
indent_style = tab
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false

[*.{html,css,scss,json,yml}]
indent_style = space
indent_size = 2

[docker-compose.yml]
indent_style = space
